<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141f23"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/language_flag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/france"
            android:layout_weight="1"
            android:contentDescription="Language Flag"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/flame_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/fire"
                android:contentDescription="Flame Icon" />

            <TextView
                android:id="@+id/flame_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fa4926"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/diamond_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/gem"
                android:contentDescription="Diamond Icon" />

            <TextView
                android:id="@+id/diamond_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="500"
                android:textColor="#016dfe"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/heart"
                android:contentDescription="Heart Icon" />

            <TextView
                android:id="@+id/hearts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="5"
                android:textColor="#f96156"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/home_list"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:paddingStart="16dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECTION 1, UNIT 1"
            android:layout_marginTop="15dp"
            android:textColor="#c2ed9f"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_label"
            android:layout_below="@id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use basic phrases"
            android:textColor="#f6faed"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <View
                android:id="@+id/divider_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#4ab001" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="-60dp"
                android:src="@drawable/list" />
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="210dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="230dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap18"
                    android:contentDescription="Image from chapter 1"/>
                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="210dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="480dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap22"
                    android:contentDescription="Image from chapter 1"/>

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="210dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="360dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap26"
                    android:contentDescription="Image from chapter 1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="150dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap11"
                    android:contentDescription="Image from chapter 2"/>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="110dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap12"
                    android:contentDescription="Image from chapter 2"/>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap12"
                    android:contentDescription="Image from chapter 2"/>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="110dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap13"
                    android:contentDescription="Image from chapter 2"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="150dp"
                    android:src="@drawable/chap19"
                    android:contentDescription="Image from chapter 2"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap20"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap21"
                    android:layout_marginLeft="150dp"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap21"
                    android:layout_marginLeft="190dp"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="220dp"
                    android:src="@drawable/chap14"
                    android:contentDescription="Image from chapter 2"/>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap13"
                    android:layout_marginLeft="190dp"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap23"
                    android:layout_marginLeft="150dp"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap24"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="150dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap25"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="110dp"
                    android:src="@drawable/chap25"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chap13"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/chap27"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="130dp"
                    android:src="@drawable/chap25"
                    android:contentDescription="Image from chapter 2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="150dp"
                    android:src="@drawable/chap28"
                    android:contentDescription="Image from chapter 2"/>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>
