<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141f23"
    android:padding="16dp">
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Back"
        android:src="@drawable/arrow" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="#f1f8fe"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/subHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick up where you left off."
                android:textColor="#dce7ed"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="40dp" />

            <Button
                android:id="@+id/signInButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTintMode="src_over"
                android:text="SIGN IN"
                android:gravity="center"
                android:textColor="#142329"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/btn2"
                android:layout_marginBottom="40dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#37444c"
            android:layout_marginVertical="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/newAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New to Duolingo?"
                android:textColor="#f4fbfc"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/newAccountSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start learning a language now."
                android:textColor="#dce7ed"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/getStartedButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:backgroundTintMode="src_over"
                android:text="GET STARTED"
                android:background="@drawable/btn2"
                android:textColor="#142329"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
